.bg{background-color: #7fd1f7;}
.uploadWrap{height:300rpx; width:100%;} 
.upload_Item{ width: 100%; height: 300rpx;} 
.upload_Item_img{ width: 100%; height: 300rpx;}
.tip{
  font-size: 24rpx;
  display: -webkit-flex; /* Safari */
  display: flex;
  padding:20rpx 0 0rpx 70rpx;
}
.tip .small{
  flex: 1;
  flex-direction: column;
  color: #333;
}
.new{
  height:calc(100vh - 380rpx);
  margin: 20rpx;
}
.new .new-title{
  margin: 20rpx 0;
  padding: 0 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color:black;
}
.new-right{
  float: right; 
  width: 50rpx;
  height: 50rpx;
}
.new .product{
  height:calc(100vh - 480rpx);
  background-color:white;
  border-radius: 60rpx;
  padding: 15rpx 40rpx;
}
.new .product .item{
  height: 32%;
  float: left;
  text-align: left;
}
.new .product .item:nth-child(odd){
   padding-right: 30rpx;
}
.new .product .item .img{
  width: 300rpx; 
  height: 80%;
  border-radius: 20rpx;
}
.new .product .item .name{
 font-size: 20rpx;
 display: block;
}
.new .product .more{
  font-size: 30rpx;
  position: absolute;
  bottom: 10rpx;
  left: 42%;
  color:#7fd1f7 ;
}
.noData{
  text-align: center;
  font-weight: bold;
  height: 200rpx;
  line-height: 200rpx;
}